<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/iv_gif_container"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="50dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_shadow_container"
        android:background="@drawable/bg_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_auto_image_slider"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="serif"
            android:inputType="textMultiLine"
            android:padding="6dp"
            android:text="Kami Hadir Untuk Membantu Mengontrol Makanan Anda"
            android:textColor="#3c415f"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGetStarteddd"
            android:layout_width="180dp"
            android:layout_height="82dp"
            android:backgroundTint="#3c415f"
            android:fontFamily="serif"
            android:text="Get Started"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewLogoAwal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout11111"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="428dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="serif"
                android:text="3. Edit Data Datamu jika diperlukan"
                android:textColor="#3c415f"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ss1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="29dp"
                android:fontFamily="serif"
                android:text="4. Foto Makananmu untuk mengetahui kandungan gizinya "
                android:textColor="#3c415f"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ss3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="236dp"
                android:layout_marginEnd="41dp"
                android:fontFamily="serif"
                android:text="2. Monitor Data Kesehatanmu"
                android:textColor="#3c415f"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ss1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ss1"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ss1" />

            <ImageView
                android:id="@+id/ss2"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ss1"
                app:srcCompat="@drawable/ss2" />

            <ImageView
                android:id="@+id/ss3"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ss2"
                app:srcCompat="@drawable/ss3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="serif"
                android:text="1. Isi Form Data Dirimu asdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
                android:textColor="#3c415f"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ss1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutWhy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="serif"
                        android:text="Kenapa Kita Perlu Menjaga Pola Makan ?"
                        android:textColor="#3c415f"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:id="@+id/linearLayoutkolestrol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="32dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Makan adalah kegiatan dimana makhluk hidup mengonsumsi berbagai jenis asupan sehingga dapat memperoleh berbagai manfaat seperti gizi, enegi, vitamin dan kesehatan yang merupakan hasil dari apa yang kita makan."
                            android:textAlignment="viewStart"
                            android:textColor="#3c415f"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="176dp"
                            android:layout_height="185dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/childeat" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Namun jika kita mengkonsumsi nya secara berlebihan, maka hal itu juga dapat berdampak buruk terhadap kesehatan."
                        android:textAlignment="viewStart"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Contohnya saja apabila kita terlalu banyak mengkonsumsi makanan berminya maka kita akan terserang kolestrol."
                        android:textAlignment="textEnd"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Lalu jika kita terlalu banyak mengkonsumsi makanan manis, maka kita akan terkena Diabetes."
                        android:textAlignment="viewStart"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:text="Maka dari itu kita perlu memperhatikan asupan gizi dan nutrisi kita, supaya tidak berlebihan."
                        android:textAlignment="textEnd"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPenyakit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="serif"
                        android:text="Daftar Penyakit Berbahaya Jika Kita Tidak Memperhatikan Konsumsi Makanan Kita"
                        android:textAlignment="center"
                        android:textColor="#3c415f"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/linearLayoutkolestrolslider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewkolestrol"
                            android:layout_width="176dp"
                            android:layout_height="185dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/fryfood" />

                        <TextView
                            android:id="@+id/textViewkolestrol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="32dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Kolesterol adalah lemak yang berguna bagi tubuh. Namun bila kadarnya di dalam tubuh terlalu tinggi, kolesterol akan menumpuk di pembuluh darah dan mengganggu aliran darah."
                            android:textAlignment="viewStart"
                            android:textColor="#3c415f"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Kolestrol"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayoutdiabetes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewsweet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="32dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Diabetes adalah penyakit kronis atau yang berlangsung jangka panjang yang ditandai dengan meningkatnya kadar gula darah (glukosa) hingga di atas nilai normal. Ada dua jenis utama diabetes, yaitu diabetes tipe 1 dan tipe 2."
                            android:textAlignment="viewStart"
                            android:textColor="#3c415f"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageViewsweet"
                            android:layout_width="176dp"
                            android:layout_height="185dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/sweetfood" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Diabetes"
                        android:textAlignment="textEnd"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayouthipertesi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewhipertensi"
                            android:layout_width="176dp"
                            android:layout_height="185dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/saltfood" />

                        <TextView
                            android:id="@+id/textViewhipertesi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="32dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Hipertensi atau tekanan darah tinggi adalah kondisi ketika tekanan darah di 130/80 mmHg atau lebih. Jika tidak segera ditangani, hipertensi bisa menyebabkan munculnya penyakit-penyakit serius yang mengancam nyawa, seperti gagal jantung, penyakit ginjal, dan stroke."
                            android:textAlignment="viewStart"
                            android:textColor="#3c415f"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Hipertensi / Darah Tinggi"
                        android:textAlignment="viewStart"
                        android:textColor="#3c415f"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>